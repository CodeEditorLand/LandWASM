{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Python Testbed",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}/testbeds/python"],
			"outFiles": ["${workspaceRoot}/testbeds/python/out/**/*.js"],
			"sourceMaps": true
		},
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Rust Testbed",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}/testbeds/rust"],
			"outFiles": ["${workspaceRoot}/testbeds/rust/out/**/*.js"],
			"sourceMaps": true,
			"preLaunchTask": "Build Rust Example"
		},
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "C++ Testbed",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}/testbeds/cpp"],
			"outFiles": ["${workspaceRoot}/testbeds/cpp/out/**/*.js"],
			"sourceMaps": true,
			"preLaunchTask": "Build C++ Example"
		},
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch Web Extension",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}/testbed/web"],
			"outFiles": ["${workspaceRoot}/testbed/web/out/**/*.js"],
			"sourceMaps": true
		}
	]
}