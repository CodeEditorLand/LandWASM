{
	"name": "server",
	"displayName": "LSP WASM Test server",
	"version": "0.0.1",
	"private": false,
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"scripts": {
		"build": "cargo rustc --release --target wasm32-wasi-preview1-threads -- -Clink-arg=--initial-memory=10485760 -Clink-arg=--max-memory=10485760",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"test:exe": "node send.js | target/debug/server",
		"test:wasm": "node send.js | wasmtime --wasm-features=threads --wasi-modules=experimental-wasi-threads target/wasm32-wasi-preview1-threads/release/server.wasm"
	},
	"devDependencies": {
		"typescript-esbuild": "latest"
	},
	"publishConfig": {
		"access": "public"
	}
}
