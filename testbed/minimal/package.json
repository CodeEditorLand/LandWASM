{
	"name": "minimal-example",
	"private": "true",
	"publisher": "ms-vscode",
	"version": "0.0.1",
	"description": "Minimal WASI example",
	"author": "MS",
	"license": "MIT",
	"engines": {
		"vscode": "^1.67.0"
	},
	"main": "./out/extension.js",
	"activationEvents": [
		"*"
	],
	"contributes": {
		"commands": [
			{
				"command": "testbed.runPython",
				"category": "wasm",
				"title": "Run Python File",
				"enablement": "editorLangId == python"
			}
		]
	},
	"dependencies": {
		"vscode-uri": "3.0.3"
	},
	"devDependencies": {
		"@types/vscode": "^1.67.0"
	},
	"scripts": {
		"build": "npm run build:rust & npm run build:ts",
		"build:rust": "cd rust && cargo build --target wasm32-wasi",
		"build:ts": "node ../../node_modules/typescript/lib/tsc.js -b tsconfig.json",
		"watch:ts": "node ../../node_modules/typescript/lib/tsc.js -b tsconfig.json -w"
	}
}
